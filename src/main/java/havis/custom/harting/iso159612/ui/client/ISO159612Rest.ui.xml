<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:havis.application.component.ui"
	xmlns:s="urn:import:havis.net.ui.shared.client" xmlns:w="urn:import:havis.custom.harting.iso159612.ui.client.widgets"
	xmlns:l="urn:import:havis.custom.harting.iso159612.ui.client"
	xmlns:wrapper="urn:import:havis.custom.harting.iso159612.ui.client.wrapper">
	<ui:with type="havis.custom.harting.iso159612.utils.Translation"
		field="i18n" />
	<ui:style>
	.sections {
		font-size: 1.5em;
		overflow: auto;
		-webkit-flex: 1;
		-ms-flex: 1;
		flex: 1;
	}
	
	.core-ui {
		display: -webkit-flex;
		display: -ms-flexbox;
		display: flex;
		-webkit-flex-direction: column;
		-ms-flex-direction: column;
		flex-direction: column;
	}
	
	
	</ui:style>

	<g:FlowPanel styleName="{style.core-ui}">
		<g:FlowPanel styleName="{style.sections}">
			<s:BackButton text="{i18n.appName}" />
			<s:ConfigurationSections>
				<wrapper:ReadWritePanelWrapper
					ui:field="readWritePanelWrapper" addStyleNames="separator"/>
				<wrapper:TemplatesPanelWrapper
					ui:field="templatesPanelWrapper" addStyleNames="separator"/>
				<wrapper:SettingsPanelWrapper ui:field="settingsPanelWrapper" addStyleNames="separator"/>
			</s:ConfigurationSections>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 