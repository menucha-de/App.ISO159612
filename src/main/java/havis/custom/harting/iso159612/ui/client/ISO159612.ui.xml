<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:havis.application.component.ui" xmlns:w="urn:import:havis.custom.harting.iso159612.ui.client.widgets" xmlns:l="urn:import:havis.custom.harting.iso159612.ui.client">
	<ui:with type="havis.custom.harting.iso159612.utils.Translation" field="i18n" />
	<ui:style>
	.headline {
		width: 100%;
		border-bottom: 1px solid lightgray;
		padding: 0.25em;
	}
	
	.headline tr td:first-child {
		width: 100%
	}
	
	.headline tr td:last-child {
		min-width: 62px;
		max-width: 62px;
	}
	
	.headline .title{
		font-size:28px;
	}
	
	.headline img {
		width: 100%;
	}
	
	.root {
		position: absolute;
		left: 0;
		right: 0;
		bottom: 0;
		top: 0;
		margin: auto;
		max-width: 40em;
	}
	</ui:style>

	<g:FlowPanel>		
		<w:MenuBarPanel ui:field="menuBar" />
		<g:HorizontalPanel ui:field="headline" addStyleNames="{style.headline}">
			<g:Label text="{i18n.appName}" addStyleNames="{style.title}" />
			<g:Image ui:field="image" url="images/HOME_Icon_Harting.svg" />
		</g:HorizontalPanel>
		<w:HavisOfflinePanel ui:field="rootPanel" addStyleNames="{style.root}">
			<g:FlowPanel>
				<l:ReadWritePanel ui:field="readWritePanel" startPage="true" visible="true" />
				<l:SettingsPanel ui:field="settingsPanel" visible="false" />
				<l:TemplatesPanel ui:field="templatesPanel" visible="false" />
				<l:SelectPanel ui:field="selectPanel" visible="false" />
				<l:RemoteSocketPanel ui:field="remoteSocketPanel" visible="false"/>
			</g:FlowPanel>
		</w:HavisOfflinePanel>
	</g:FlowPanel>
</ui:UiBinder> 